        const cardHeight = 420; // Doit correspondre √† la CSS .game-card height

        // Fonction pour g√©n√©rer le HTML d'une carte
        function createCardHTML(data, index) {
            return `
                <div class="game-card">
                    <div class="card-number">#${index + 1}</div>
                    <div class="card-decoration">${data.icon}</div>
                    <div>
                        <div class="card-category">${data.cat}</div>
                        <div class="card-main-text">${data.title}</div>
                    </div>
                    <div class="card-sub-text">${data.desc}</div>
                </div>
            `;
        }

        // Initialisation des bandes (Strips)
        // On duplique les tableaux pour cr√©er l'illusion de boucle infinie lors du scroll rapide
        function initStrip(stripId, dataSource) {
            const strip = document.getElementById(stripId);
            strip.innerHTML = "";
            let htmlContent = "";
            
            // On r√©p√®te la liste 40 fois pour avoir de la marge de scroll
            for (let i = 0; i < 40; i++) {
                dataSource.forEach((item, idx) => {
                    htmlContent += createCardHTML(item, idx);
                });
            }
            strip.innerHTML = htmlContent;
        }

        function startGame() {
            document.getElementById('intro-screen').style.opacity = '0';
            setTimeout(() => {
                document.getElementById('intro-screen').style.display = 'none';
                document.getElementById('game-screen').style.display = 'flex';
                // Petit d√©lai pour l'opacit√©
                setTimeout(() => {
                    document.getElementById('game-screen').style.opacity = '1';
                    launchSlots();
                }, 100);
            }, 800);
        }

        function resetGame() {
            // Reset UI
            const rect = document.getElementById('violet-border');
            rect.classList.remove('animate-border');
            rect.style.strokeDashoffset = '2400';
            
            document.getElementById('final-msg').classList.remove('show');
            document.getElementById('replay-btn').classList.remove('show');

            // Reset Slots position visuelle
            document.querySelectorAll('.slot-strip').forEach(el => {
                el.style.transition = 'none';
                el.style.transform = 'translateY(0)';
                // Reset card animations
                el.querySelectorAll('.game-card').forEach(c => c.classList.remove('pop-effect'));
            });

            // Relancer
            setTimeout(launchSlots, 100);
        }

        function launchSlots() {
            initStrip('strip-1', dataElements);
            initStrip('strip-2', dataTissus);
            initStrip('strip-3', dataMouvements);

            const delays = [3000, 5000, 8000]; // 3s, 5s, 8s
            const strips = [
                { id: 'strip-1', data: dataElements },
                { id: 'strip-2', data: dataTissus },
                { id: 'strip-3', data: dataMouvements }
            ];

            strips.forEach((stripObj, index) => {
                const stripEl = document.getElementById(stripObj.id);
                
                // 1. Choix de la carte gagnante al√©atoire
                const winningIndex = Math.floor(Math.random() * stripObj.data.length);
                
                // 2. Calcul de la position : On veut atterrir sur une instance de cette carte loin dans la liste
                // On vise par exemple la 30√®me r√©p√©tition pour laisser le temps de scroll
                const targetRound = 30; 
                const targetPositionIndex = (targetRound * stripObj.data.length) + winningIndex;
                const translateY = -(targetPositionIndex * cardHeight);

                // 3. Animation CSS
                // On force un reflow
                stripEl.offsetHeight; 
                
                // Dur√©e de l'animation = le d√©lai (3s, 5s, 8s)
                stripEl.style.transition = `transform ${delays[index] / 1000}s cubic-bezier(0.1, 0.9, 0.2, 1)`; // Effet ralentissement
                stripEl.style.transform = `translateY(${translateY}px)`;

                // 4. Action √† la fin du mouvement
                setTimeout(() => {
                    // Trouver la carte sp√©cifique qui est affich√©e
                    // C'est le ni√®me enfant du strip
                    const winningCardNode = stripEl.children[targetPositionIndex];
                    if(winningCardNode) {
                        winningCardNode.classList.add('pop-effect');
                    }
                    
                    // Si c'est le dernier slot (8s)
                    if (index === 2) {
                        setTimeout(triggerFinalAnimation, 800); // Petit buffer apr√®s le stop
                    }

                }, delays[index]);
            });
        }

        function triggerFinalAnimation() {
            // 1. Lancer le trait violet
            // On doit ajuster la taille du rect SVG √† la taille du conteneur de cartes
            const cardsBox = document.getElementById('cards-box');
            const rect = document.getElementById('violet-border');
            
            // Le SVG est en width 100% height 100% du cards-box, donc coordonn√©es simples
            rect.setAttribute('width', cardsBox.clientWidth);
            rect.setAttribute('height', cardsBox.clientHeight);
            rect.setAttribute('x', 0);
            rect.setAttribute('y', 0);

            // Recalcul dasharray pour faire tout le tour
            const perimeter = 2 * (cardsBox.clientWidth + cardsBox.clientHeight);
            rect.style.strokeDasharray = perimeter;
            rect.style.strokeDashoffset = perimeter;

            rect.classList.add('animate-border');

            // 2. Faire apparaitre le texte et le bouton
            setTimeout(() => {
                document.getElementById('final-msg').classList.add('show');
                setTimeout(() => {
                    document.getElementById('replay-btn').classList.add('show');
                }, 1000);
            }, 1000); // Commence pendant que le trait se dessine
        }

        // Init au chargement
        window.onload = () => {
           // Pr√©-remplissage invisible pour caler la layout si besoin
           initStrip('strip-1', dataElements);
           initStrip('strip-2', dataTissus);
           initStrip('strip-3', dataMouvements);
        };

    </script>
</body>
</html>
